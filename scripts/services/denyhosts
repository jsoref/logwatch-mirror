my @Denies = ();

while (defined($ThisLine = <STDIN>)) {
   chomp($ThisLine);
   next if ($ThisLine eq "");
   if ($ThisLine =~ /\snew denied hosts:\s\[([^\]]+)/i) {
      my $list = $1;
      $list =~ s/'//g;
      push(@Denies, split(",", $list));
   }
}

if (scalar(@Denies)) {
   print "\n";
   print "new denied hosts: \n    ".join("\n    ", @Denies);
   print "\n";
}

exit(0);

